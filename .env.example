# Domains (used by Traefik router rules)
APP_DOMAIN=app.snt-portal.ru
API_DOMAIN=api.snt-portal.ru
LETSENCRYPT_EMAIL=admin@snt-portal.ru

# Backend runtime
CORS_ORIGIN=https://app.snt-portal.ru
NEXT_PUBLIC_API_URL=https://api.snt-portal.ru/api/v1
SNT_API_URL=https://api.snt-portal.ru/api/v1
DEFAULT_TENANT_SLUG=rassvet
DATABASE_URL=postgresql://snt_user:snt_password@postgres:5432/snt_db?schema=public
MEDIA_UPLOAD_DIR=/app/uploads

# JWT secrets (replace in production)
JWT_ACCESS_SECRET=CHANGE_ME_ACCESS_SECRET_64_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_REFRESH_SECRET_64_CHARS

# Platform admin bootstrap
PLATFORM_ADMIN_PHONE=+79991234567
PLATFORM_ADMIN_PASSWORD=Admin1234
PLATFORM_ADMIN_NAME=Platform Admin

# Optional local postgres vars
POSTGRES_USER=snt_user
POSTGRES_PASSWORD=snt_password
POSTGRES_DB=snt_db
