generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snt {
  id        Int      @id @default(autoincrement())
  name      String
  location  String?
  plots     Plot[]
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String   @unique
  role      UserRole @default(USER)
  sntId     Int?
  snt       Snt?     @relation(fields: [sntId], references: [id])
  plots     Plot[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plot {
  id        Int      @id @default(autoincrement())
  number    String
  area      Float?
  sntId     Int
  snt       Snt      @relation(fields: [sntId], references: [id])
  ownerId   Int?
  owner     User?    @relation(fields: [ownerId], references: [id])
  balance   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  CHAIRMAN
  COUNCIL
  ADMIN
}






